<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.code.knab.best_quiz">

    <application
        android:name=".BestQuizApp"
        android:allowBackup="true"
        android:icon="@mipmap/best_quiz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.lecture.LectureActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.questions.QuestionListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.single_question.SingleQuestionActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>